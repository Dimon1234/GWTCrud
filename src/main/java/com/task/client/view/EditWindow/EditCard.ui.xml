<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:date="urn:import:com.github.gwtbootstrap.datepicker.client.ui">
    <g:HTMLPanel>
        <b:WellForm ui:field="editBox">
            <b:ControlLabel>Name</b:ControlLabel>
            <b:TextBox ui:field="bookNameBox" placeholder="name of the book"/>

            <b:ControlLabel>Author</b:ControlLabel>
            <b:TextBox ui:field="author" placeholder="author(s) of the book"/>

            <b:ControlLabel>Description</b:ControlLabel>
            <b:TextArea ui:field="descriptionArea" placeholder="description"/>

            <b:ControlLabel>Published Date</b:ControlLabel>
            <date:DateBoxAppended ui:field="pubDateBox" format="dd-mm-yyyy" autoClose="true"/>

            <b:ControlLabel>Price</b:ControlLabel>
            <b:DoubleBox ui:field="priceBox" placeholder="name of the book"/>

            <b:SubmitButton ui:field="save">save</b:SubmitButton>
            <b:Button ui:field="cancel">cancel</b:Button>
        </b:WellForm>
    </g:HTMLPanel>



</ui:UiBinder>